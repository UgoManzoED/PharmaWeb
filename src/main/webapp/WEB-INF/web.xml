<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="https://jakarta.ee/xml/ns/jakartaee" 
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" 
         id="WebApp_ID" 
         version="6.0">

  <display-name>PharmaWeb</display-name>

  <!-- 1. DEFINIZIONE FILTRI -->
  <filter>
    <filter-name>GlobalDataFilter</filter-name>
    <filter-class>it.unisa.pharmaweb.control.filter.GlobalDataFilter</filter-class>
  </filter>
  <filter>
    <filter-name>CsrfFilter</filter-name>
    <filter-class>it.unisa.pharmaweb.control.filter.CsrfFilter</filter-class>
  </filter>

  <!-- 2. MAPPATURA FILTRI CON DISPATCHER ERROR -->
  <filter-mapping>
    <filter-name>GlobalDataFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>ERROR</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CsrfFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>ERROR</dispatcher>
  </filter-mapping>

  <!-- 3. CONFIGURAZIONE ERROR PAGES -->
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/views/errors/404.jsp</location>
  </error-page>

  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/views/errors/403.jsp</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/views/errors/500.jsp</location>
  </error-page>

  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/views/errors/500.jsp</location>
  </error-page>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>